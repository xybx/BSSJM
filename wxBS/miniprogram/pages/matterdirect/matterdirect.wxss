/* pages/matterdirect.wxss */
@import '../../fonts/iconfont.wxss';

.matterbox{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}
.mcontent-item-time{
  font-size: 28rpx;
  font-weight: 400;
  font-family: 'PingFang SC';
  color:rgba(102, 102, 102, 1);
  padding-top: 20rpx;
  display: flex;
  border-top: 1px solid #cccccc63;
  justify-content: space-between;
  align-items: center;
  margin-top: 2vmax;
}

.mcontent-item-time-btn{
  margin-left: 20rpx;
}

.mcontent-item-title{
  /* margin-top: 1vmax; */
  font-size: 32rpx;
  font-weight: 500;
  font-family: 'PingFang SC';
  color:rgba(51, 51, 51, 1);
  padding-top: 20rpx;
  display: flex;
}
.itemlist{
  display: block;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding:15rpx 30rpx;
  background-color: #ffffff;
  margin: 1.5vmax 2vmax 0vmax 2vmax;
  position: relative;
  border-radius: 1vmax;
  /*border-bottom: 1px solid #ccc;*/

}
.itemlist:last-child{
  border-bottom: none;
}
.mcontent-item-title text{
  font-size: 32rpx;
}

.mcontent-item-time > text{
  font-size: 30rpx;
  color: #999999;
}
.nodata{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  /*    上下居中*/
  justify-content: center;


}
.nodata image{
  width: 28vmax;
  height: 24vmax;
}
.nodata text{
  font-size: 32rpx;
  font-weight: 500;
  font-family: 'PingFang SC';
  color:rgba(102, 102, 102, 1);

}


.mcontent{
  height: 100%;
}

.matterTitle{
  display: flex;
}
.matterTitle text{
  font-size: 2.3vmax;
  font-weight: bold;
  letter-spacing: 0.3vmax;
  display: flex;
  align-items: center;
  font-family: 'PingFang SC';
  margin-left: 1vmax;
}

.mcontent-item-type{
  margin: 0.7vmax 0;
}

.label-block{
/*    文字灰色*/
  color: #999999;
  font-weight: 400;
  font-family: 'PingFang SC';
}


.mcontent-item-button{
  color: #999999;
  display: flex;
  align-items: center;
  justify-content: center;
}
.icon-notification{
  display: flex;
  background-color: rgb(53, 139, 242);
  width: 3vmax;
  height: 3vmax;
  border-radius: 50%;
  font-size: initial;
  align-items: center;
  justify-content: center;
  color: #ffffff;
  float: left;
}