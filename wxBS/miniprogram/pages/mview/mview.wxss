.viewfont{
  position: absolute;
  left: 50rpx;
  display: flex;
  flex-direction: column;
  z-index:50;
}
.viewfont text:last-child{
  font-size:32rpx;
}
.viewlogo{
  width:220rpx;
  height: 90rpx;
  position: absolute;
  z-index: 80;
  top:590rpx;
  left: 5rpx;
}
.vfont{
  width:290rpx;
  height: 120rpx;
  position: absolute;
  z-index: 80;
  top:200rpx;
  left:-10rpx;
}

.vtext{
  position: relative;
  z-index: 80;
  top:345rpx;
  font-weight: 500;
  left:-10rpx;
}

.viewbox > image{
  width:78%;
  height: 100%;
  position: absolute;
  right:-78rpx;
  z-index: 30;
}

.viewbody{
  position: relative;
  top: -80rpx;
  padding: 0 35rpx;
  z-index: 99;
}

.mheader{
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  position: relative;
  margin:0 0 20rpx;
}
.mheader > text{
  font-size:35rpx;
  font-weight: 600;
  font-family: 'PingFang SC';
  padding-left:24rpx;
}
.mheader > text::before{
  content: '';
  position: absolute;
  top:10rpx;
  left: 0;
  display: block;
  width: 9rpx;
  height: 32rpx;
  border-radius: 25rpx;
  background-color:rgba(57, 149, 204, 1);
}
.mbody{
  background-color: #fff;
  border-radius: 40rpx;
  margin-bottom:40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding:35rpx 32rpx;
}
.mbody:last-child{
  margin-bottom: 0;
}

.mbody > text{
  font-size:34rpx;
  font-weight: 600;
  line-height:50rpx;
}
.mbody button{
  background-color:rgba(35, 129, 236, 1);
  border-radius: 10rpx;
  padding:10rpx 60rpx;
  font-size: 30rpx;
  color: #fff;
  border: none;
  outline: none;
  margin-top:40rpx;
}

.imgbox{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.imgbox image{
  width: 360rpx;
  height: 360rpx;
  margin: 30rpx 0;
}
.imgbox > text{
  color: rgba(102, 102, 102, 1);
  font-size: 30rpx;
}





