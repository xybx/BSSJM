/* pages/userHome/userHome.wxss */
.weui-navigation-bar__center{
  font-size:15px!important;
}
.userbox{
  padding: 4px 15px;
  border-radius: 6px;
  background-color: #eaeaea;
  float:right;
  display: inline-block;
  margin-right:15px;
  margin-top: 15px;
}
.icon-shiyourenkou{
  font-size:20px;
  color: #666;
  margin-right: 8px;
}
.userbox text{
  font-size:16px;
  font-weight:500;
  color: #666;
  position: relative;
  top: -2px;
}
.clear{
  clear: both;
}
.itembox{
  margin-top:15px;
  height:220rpx;
  padding: 0 15px;
  position: relative;
}
.itembox image{
  width: 100%;
  height: 100%;
  z-index: 1;
}
.itembox text{
  position: absolute;
  z-index: 2;
  left: 35px;
  top: calc(50% - 10px);
  font-size:20px;
  font-weight: bold;
  color: #333;
}
.pagebody{
  /* width: 100%; */
  height: 100%;
  padding:15px 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.page{
  width: 100%;
  height:40px;
  line-height:40px;
  text-align: center;
  font-size:18px;
  letter-spacing: 2px;
}
.public{
  border-bottom: 1px solid #eee;
}
.cancle{
  border-top: 1px solid #eee;
}







